# 应用配置
APP_NAME=鑫琳医生 API
APP_VERSION=1.0.0
DEBUG=true
SEED_DATA=true

# 数据库配置 (PostgreSQL - 生产环境)
DATABASE_URL=postgresql+psycopg://xinlin_prod:your_password@localhost:5432/xinlin_prod
# SQLite 配置 (仅开发环境)
# DATABASE_URL=sqlite:///./app.db

# JWT 认证配置
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 测试模式 - true时验证码000000始终有效
TEST_MODE=true

# 验证码功能开关 - false时禁用验证码验证（临时方案）
ENABLE_SMS_VERIFICATION=false

# LLM 配置
LLM_PROVIDER=qwen
LLM_MODEL=qwen-plus
LLM_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_API_KEY=your-qwen-api-key
LLM_TEMPERATURE=0.7

# Qwen-VL 多模态配置（皮肤科智能体使用）
# 可选模型: qwen3-vl-plus, qwen-vl-plus, qwen-vl-max
QWEN_VL_MODEL=qwen3-vl-plus

# Admin JWT 配置
ADMIN_JWT_SECRET=admin-secret-key-change-in-production
ADMIN_JWT_EXPIRE_HOURS=24

# 短信服务配置 (TODO: 接入真实短信网关时配置)
# SMS_PROVIDER=aliyun  # aliyun/tencent/qiniu
# SMS_ACCESS_KEY_ID=your-access-key-id
# SMS_ACCESS_KEY_SECRET=your-access-key-secret
# SMS_SIGN_NAME=鑫琳医生
# SMS_TEMPLATE_CODE=SMS_123456789

# CrewAI 配置
# 禁用遥测数据上报，避免网络超时影响性能
OTEL_SDK_DISABLED=true